<Window x:Class="text_editor1.SearchAndReplaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
    Title="Search And Replace Window" Height="170" Width="300">
    <Grid Background="#DFE4EA">
        <Button Content="Find" HorizontalAlignment="Left" Height="25" Margin="26,88,0,0" VerticalAlignment="Top" Width="90"
                Background="#55efc4"
                Foreground="White"
                FontFamily="Arial"
                FontSize="16"/>

        <TextBox HorizontalAlignment="Center" Height="21" Margin="0,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144"
                 Background="#FFF6F6F6"
                 Foreground="DarkGray"
                 BorderBrush="{x:Null}"
                 />
        
        <Button  Content="Replace" HorizontalAlignment="Left" Height="25" Margin="188,88,0,0" VerticalAlignment="Top" Width="90"
            Background="#55efc4"
            Foreground="White"
            FontFamily="Arial"
            FontSize="16"/>

    </Grid>
</Window>
